
public class Person {

	//멤버변수
	String name;  //기본값 - null
	int age;	  //기본값 0
	
	//멤버변수에 값을 대입해주는 기능(메소드)
	void setMembers(String name, int age) {
		this.name=name;
		this.age=age;
	}
	
	//멤버변수의 값을 출력해주는 기능(메소드)
	void show() {
		System.out.println("name: "+name);
		System.out.println("age: "+age);
		System.out.println();
	}
	
	//생성자 메소드 적용
	Person(String name,int age){
		//멤버변수의 값을 초기화 하는 작업
		this.name=name;
		this.age=age;
		
	}
	
	
}
