import java.util.Scanner;

public class Arraytext2 {
public static void main(String[] args) {
	Scanner scan=new Scanner(System.in);
	
	int num;
		
	System.out.println("학생의 수를 입력하시오 :");
	num=scan.nextInt();
	int[] arr=new int[num];
	
	for(int i=0; i<arr.length;i++) {
		if(num>101) {
			System.out.println("잘못된성적입니다. 다시입력해주세요");
			break;
		}
		System.out.println("학생 "+arr[i]+"의 성적을 입력하세요 : "+num);
	}
	
	
	
	
}
}
